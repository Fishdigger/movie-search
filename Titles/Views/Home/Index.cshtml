<h1 class="text-center">Movie Database</h1>
<br />
<hr />
<br />
<div class="col-md-4 col-md-offset-4">
    <form id="searchForm">
        <div class="form-group">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Movie Title..." id="searchName"/>
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button" id="searchBtn">Search!</button>
                </span>
            </div>
        </div>
    </form>
</div>

<div class="col-md-4 col-md-offset-4">
    <button type="button" id="showAllBtn" class="btn btn-block">Show All Movies</button>
</div>

<div id="movieModal" class="modal fade modal-lg" role="dialog">
    <div class="modal-dialog modal-lg" style="width:60%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="movieModalTitle"></h4>
                <p class="text-info" id="movieGenre"></p>
            </div>
            <div class="modal-body" id="movieModalBody">
                <h4 id="movieTitle"></h4>
                <p id="genre"></p>
                <div class="row">
                    <div class="col-md-6">
                        <h5 style="margin-left: 8%;"><strong>Awards</strong></h5>
                        <ul id="awards"></ul>
                    </div>
                    <div class="col-md-6">
                        <h5 class="text-center"><strong>Description</strong></h5>
                        <p id="story"></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<hr hidden id="bottomHr" class="col-md-12"/>
<div id="results" class="col-md-8 col-md-offset-2" hidden>
    <table class="table">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Release Year</th>
            </tr>
        </thead>
        <tbody id="table-body"></tbody>
    </table>
</div>